{
  "name": "zotero-summary-creator",
  "version": "1.0.0",
  "description": "TDD-based tool to create summaries from Zotero papers using Ollama",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "zotero-summary": "./src/cli.js"
  },
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "cli": "node src/cli.js",
    "build": "node build.js",
    "build:xpi": "npm run build"
  },
  "keywords": [
    "zotero",
    "ollama",
    "summary",
    "research",
    "tdd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^1.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "archiver": "^6.0.2",
    "node-fetch": "^3.3.2"
  }
}
